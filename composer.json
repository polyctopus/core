{
  "name": "polyctopus/core",
  "description": "A modern, modular PHP library for multidimensional, multilingual content management with versioning, variants, translations, and asset handling.",
  "type": "library",
  "keywords": [
    "polyctopus",
    "content",
    "multidimensional",
    "multilingual",
    "content management",
    "cms",
    "content types",
    "content variants",
    "translations",
    "versioning",
    "assets",
    "php",
    "framework",
    "library"
  ],
  "homepage": "https://github.com/polyctopus/core",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Daniel Schmelz",
      "email": "daniel@schmelz.it"
    }
  ],
  "require": {
    "php": ">=8.3"
  },
  "autoload": {
    "psr-4": {
      "Polyctopus\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "pestphp/pest": "^3.8"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "support": {
    "issues": "https://github.com/polyctopus/core/issues",
    "source": "https://github.com/polyctopus/core"
  }
}

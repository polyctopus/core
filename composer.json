{
  "name": "polyctopus/core",
  "description": "Core library for polyctopus multidimensional content",
  "type": "library",
  "keywords": [
    "polyctopus",
    "multidimensional",
    "content",
    "library",
    "php",
    "framework",
    "api",
    "content management",
    "cms",
    "data structures",
    "content types",
    "content models",
    "content management system",
    "content management framework",
    "content management library"
  ],
  "license": "LGPL-3.0-or-later",
  "require": {
    "php": ">=8.3"
  },
  "autoload": {
    "psr-4": {
      "Polyctopus\\Core\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "pestphp/pest": "^3.8"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
